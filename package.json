{
  "name": "emoji-api",
  "version": "0.0.1",
  "description": "add, search and use emojis wherever you please with this RESTful API",
  "main": "index.js",
  "scripts": {
    "preinstall": "echo 'CREATE DATABASE emoji_api;' | psql",
    "postinstall": "yarn migrate",
    "test": "mocha test/index.js && yarn lint",
    "lint": "eslint --fix ./**/*.js",
    "start": "nodemon index.js",
    "migrate": "knex migrate:latest --knexfile db/knexfile.js",
    "rollback": "knex migrate:rollback --knexfile db/knexfile.js"
  },
  "author": "TsubasaK111",
  "dependencies": {
    "body-parser": "^1.17.2",
    "chai-http": "^4.0.0",
    "express": "^4.15.3",
    "knex": "^0.13.0",
    "moment": "^2.18.1",
    "morgan": "^1.8.2",
    "nodemon": "^1.18.3",
    "pg": "^6.4.0",
    "pg-native": "^1.10.1"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "eslint": "^4.16.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-problems": "^0.1.1",
    "eslint-plugin-prettier": "^2.6.0",
    "expect": "^1.20.2",
    "mocha": "^3.4.2",
    "prettier": "^1.12.1"
  }
}
